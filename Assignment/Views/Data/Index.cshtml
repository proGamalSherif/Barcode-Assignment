@using Assignment.DTOs
@model IList<ReadContentDataDTO>

<div class="container mt-5">
    <div class="card shadow-sm mb-3" style="height:76vh; overflow-y:auto;">
        <div class="card-header bg-primary text-white border-white border-1">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="h5 mb-0">Data Center</h2>
                <span class="badge bg-light text-dark">@Model.Count Items</span>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-primary text-white">
                    <tr>
                        <th scope="col" width="5%">#</th>
                        <th scope="col" width="25%">Created In</th>
                        <th scope="col" width="50%">Title</th>
                        <th scope="col" width="20%" class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var content in Model)
                    {
                        <tr class="position-relative">
                            <th scope="row" class="fw-normal">@content.ContentId</th>
                            <td>@content.CreatedIn.ToString("yyyy-MM-dd HH:mm")</td>
                            <td class="text-truncate" style="max-width: 300px;" title="@content.ContentTitle">@content.ContentTitle</td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <button class="btn btn-sm btn-outline-primary me-1">
                                        <i class="bi bi-upload"></i> FTP
                                    </button>
                                    <a class="btn btn-sm btn-outline-danger" asp-action="GenerateReportById" asp-route-ContentId="@content.ContentId">
                                        <i class="bi bi-file-earmark-pdf"></i> PDF
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="d-flex justify-content-end mt-3">
        <div class="col-auto">
            <div class="btn-group" role="group">
                <a class="btn btn-primary me-3" asp-action="DataDetails">
                    <i class="bi bi-plus-circle"></i> New Data
                </a>
                <a class="btn btn-outline-dark" asp-action="GenerateReportAll">
                    <i class="bi bi-file-earmark-pdf-fill"></i> Report All
                </a>
            </div>
        </div>
    </div>
</div>
