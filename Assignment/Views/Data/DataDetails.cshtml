@using Assignment.DTOs;
@model ModifyContentDataDTO;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Mvc.ModelBinding
<div class="container py-4">
    <div class="card shadow-sm mx-auto" style="max-width: 800px;">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                Insert Data
            </div>
        </div>

        <form asp-action="NewData" enctype="multipart/form-data" method="post" class="card-body">
            <div class="mb-4">
                <label asp-for="ContentTitle" class="form-label fw-bold">Title</label>
                <input type="text" class="form-control form-control-lg" asp-for="ContentTitle" placeholder="Enter content title">
                <span class="text-danger small" asp-validation-for="ContentTitle"></span>
            </div>

            <div class="mb-4">
                <label asp-for="ContentDescription" class="form-label fw-bold">Description</label>
                <textarea class="form-control" rows="5" style="resize:none" asp-for="ContentDescription"
                          placeholder="Enter detailed description"></textarea>
                <span class="text-danger small" asp-validation-for="ContentDescription"></span>
            </div>

            <div class="mb-4">
                <label asp-for="ImagePath" class="form-label fw-bold">Image Upload</label>
                <div class="input-group">
                    <input type="file" class="form-control" asp-for="ImagePath" id="image" accept="image/*">
                    <button class="btn btn-outline-secondary" type="button" id="clearImage">
                        <i class="bi bi-x-circle"></i> Clear
                    </button>
                </div>
                <span class="text-danger small" asp-validation-for="ImagePath"></span>

                <div class="image-preview mt-3 border rounded p-3 text-center" id="imagePreview">
                    <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 200px;">
                        <i class="bi bi-image text-muted" style="font-size: 3rem;"></i>
                        <span class="text-muted mt-2">Image preview will appear here</span>
                    </div>
                </div>
            </div>

            <div class="d-flex flex-wrap gap-3 mt-4">
                <button type="submit" class="btn btn-primary flex-grow-1 py-2">
                    <i class="bi bi-save-fill me-2"></i> Save Changes
                </button>
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary flex-grow-1 py-2">
                    <i class="bi bi-arrow-left me-2"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}