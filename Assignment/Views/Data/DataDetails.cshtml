@using Assignment.DTOs;
@model ModifyContentDataDTO;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Mvc.ModelBinding
<div class="w-100 d-flex justify-content-center text-primary"><h3>
		Insert Data
</h3></div>
<form asp-action="NewData" enctype="multipart/form-data" method="post" class="mt-2 border border-1 shadow-sm rounded-1 m-auto p-2 col-lg-6 col-md-10 col-sm-12 col-12">
	<div class="row col-12 m-0 p-0">
		Title
		<input type="text" class="form-control" asp-for="ContentTitle"/>
		<span class="text-danger" asp-validation-for="ContentTitle"></span>
	</div>
	<div class="row col-12 m-0 p-0">
		Description
		<textarea class="form-control" rows="3" style="resize:none" asp-for="ContentDescription"></textarea>
		<span class="text-danger" asp-validation-for="ContentDescription"></span>
	</div>
	<div class="row col-12 m-0 p-0">
		Image
		<input type="file" class="form-control" asp-for="ImagePath" id="image" accept="image/*" asp-validation-for="ImagePath">
		<span class="text-danger" asp-validation-for="ImagePath"></span>
		<div class="image-preview pt-3">
			<span class="text-center p-3">Image preview will appear here</span>
		</div>
	</div>
	<div class="d-flex flex-wrap gap-3 mt-5 button-group">
		<button type="submit" class="btn btn-primary flex-grow-1">
			<i class="bi bi-save-fill me-2"></i> Save Changes
		</button>
	</div>
</form>
@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}